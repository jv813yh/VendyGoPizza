<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:sys="clr-namespace:System;assembly=netstandard"
             xmlns:toolkitMaui="http://schemas.microsoft.com/dotnet/2021/maui"
             x:Class="VendyGoPizza.MAUI.Views.HomePage"
             Shell.NavBarIsVisible="False"
             Padding="15">
    
    <ScrollView VerticalScrollBarVisibility="Never">
        
        <VerticalStackLayout Spacing="15">
            
            <Border StrokeThickness="0"
                    StrokeShape="RoundRectangle 15"
                    BackgroundColor="Goldenrod"
                    VerticalOptions="Start"
                    Padding="15">

                <Grid ColumnDefinitions="*,150"
                      RowDefinitions="*,auto">
                    
                    <VerticalStackLayout Grid.Column="0"
                                         Grid.Row="0"
                                         Spacing="10">
                        <Label Text="Best Offer For You"
                               
                               HorizontalOptions="Center"
                               FontAttributes="Bold"
                               FontSize="20"/>
                        
                        <Label Text="Grab this amazing offer before it expires"
                               FontAttributes="Italic"
                               HorizontalOptions="Center"
                               Margin="20,0,0,0"/>

                        <Button BackgroundColor="PaleGoldenrod"
                                TextColor="Black"
                                FontAttributes="Bold"
                                FontSize="18"
                                CornerRadius="50"
                                Grid.Row="1"
                                Text="Get it now !"/>
                    </VerticalStackLayout>

                    <Image Grid.Column="1"
                           Grid.Row="0"
                           HorizontalOptions="EndAndExpand"
                           Source="pizza.png"
                           HeightRequest="130"
                           WidthRequest="130"
                           Aspect="AspectFill"/>

                </Grid>
                
            </Border>

            <Border Stroke="Goldenrod"
                    StrokeThickness="2"
                    StrokeShape="RoundRectangle 20">

                <Border.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding GoToAllPizzasPageCommand}"
                                          CommandParameter="{x:Static sys:Boolean.TrueString}"/>
                </Border.GestureRecognizers>

                <Label Text="Search pizza ..."
                       Padding="10"
                       TextColor="Goldenrod"/>


            </Border>


            <Button Command="{Binding GoToAllPizzasPageCommand}"/>

            <BoxView HeightRequest="10"
                     BackgroundColor="Transparent"/>

            <Grid>
                
                <Label Text="Popular Items"
                       HorizontalOptions="Start"
                       VerticalOptions="End"
                       FontSize="20"/>

                <Label Text="View All"
                       HorizontalOptions="End"
                       VerticalOptions="End"
                       TextDecorations="Underline"/>
            </Grid>

            <FlexLayout BindableLayout.ItemsSource="{Binding Pizzas}"
                        Wrap="Wrap">

                <BindableLayout.ItemTemplate>
                    <DataTemplate>

                        <Border FlexLayout.Basis="50%"
                                StrokeShape="RoundRectangle 10"
                                StrokeThickness="0"
                                Margin="2"
                                BackgroundColor="PaleGoldenrod">

                            <Grid RowDefinitions="150, auto, auto, auto"
                                  RowSpacing="5">

                                <Image Source="{Binding Image}"
                                       WidthRequest="130"
                                       HeightRequest="150"
                                       Grid.Row="0"/>

                                <Label Text="{Binding Name}"
                                       FontAttributes="Italic"
                                       FontSize="18"
                                       HorizontalOptions="Center"
                                       Grid.Row="1"/>

                                <Grid ColumnDefinitions="*,*"
                                      Grid.Row="2">
                                    
                                    <Label Text="{Binding Price, StringFormat='{0:N2}â‚¬'}"
                                           FontSize="16"
                                           HorizontalOptions="Start"
                                           Margin="10,2,2,2"
                                           FontAttributes="Bold"/>

                                    <HorizontalStackLayout Grid.Column="1"
                                                           HorizontalOptions="EndAndExpand"
                                                           VerticalOptions="Center"
                                                           Margin="0,0,0,2"
                                                           Spacing="5">

                                        <Label Text="4"/>

                                        <Image Source="star.png"
                                               WidthRequest="15"
                                               HeightRequest="15"
                                               Margin="0,0,10,0"/>
                                    </HorizontalStackLayout>
                                    
                                </Grid>

                                <Button Grid.Row="3"
                                        CornerRadius="30"
                                        Text="View More"
                                        BackgroundColor="Gold"
                                        BorderWidth="0"
                                        FontSize="18"
                                        FontAttributes="Bold"
                                        TextColor="Black"
                                        HorizontalOptions="Center"
                                        VerticalOptions="End"
                                        Padding="25,0"
                                        Margin="0,0,0,2"/>

                            </Grid>

                        </Border>

                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </FlexLayout>
            
        </VerticalStackLayout>
        
    </ScrollView>
</ContentPage>